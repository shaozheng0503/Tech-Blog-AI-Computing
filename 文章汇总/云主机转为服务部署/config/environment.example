# 环境变量配置文件示例
# 复制此文件为 .env 并填入实际值

# 应用配置
ENVIRONMENT=development
LOG_LEVEL=INFO
API_VERSION=1.0.0

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据存储配置
USER_DATA_FILE=/tmp/users.json

# AWS 配置
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-west-2
AWS_LAMBDA_FUNCTION_NAME=user-management-api-prod-api

# 阿里云配置
ALIBABA_CLOUD_ACCESS_KEY_ID=your_aliyun_access_key_here
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your_aliyun_secret_key_here
ALIBABA_CLOUD_REGION=cn-hangzhou

# 腾讯云配置
TENCENT_SECRET_ID=your_tencent_secret_id_here
TENCENT_SECRET_KEY=your_tencent_secret_key_here
TENCENT_REGION=ap-guangzhou

# 监控配置
MONITOR_INTERVAL=60
MONITOR_TIMEOUT=30
MONITOR_MAX_RESPONSE_TIME=2.0
MONITOR_MIN_SUCCESS_RATE=95.0

# 告警配置
ALERT_EMAIL_HOST=smtp.gmail.com
ALERT_EMAIL_PORT=587
ALERT_EMAIL_USER=your_email@gmail.com
ALERT_EMAIL_PASSWORD=your_email_password_here
ALERT_RECIPIENTS=admin@example.com,devops@example.com

# 数据库配置（如果使用外部数据库）
DATABASE_URL=postgresql://user:password@localhost:5432/userdb
REDIS_URL=redis://localhost:6379/0

# API密钥配置
API_SECRET_KEY=your_secret_key_for_jwt_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# 外部服务配置
EXTERNAL_API_BASE_URL=https://api.external-service.com
EXTERNAL_API_KEY=your_external_api_key_here

# 调试和开发配置
DEBUG=false
ENABLE_CORS=true
ENABLE_DOCS=true
ENABLE_METRICS=true

# 性能配置
MAX_WORKERS=4
REQUEST_TIMEOUT=30
CACHE_TTL=300

# 安全配置
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# 日志配置
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/user-api/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# 健康检查配置
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# 限流配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 部署配置
STAGE=dev
VERSION=1.0.0
BUILD_NUMBER=1 